<Window x:Class="CubePuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cube Puzzle" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Main 3D View -->
        <Viewport3D x:Name="MainViewport" Grid.Column="0" MouseDown="MainViewport_MouseDown">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="5,5,5" LookDirection="-5,-5,-5" UpDirection="0,1,0" FieldOfView="60"/>
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="MainModelGroup">
                        <!-- Light0 -->
                        <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

        <!-- Side Views -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Вид сверху" Margin="5"/>
            <Canvas x:Name="TopViewCanvas" Width="100" Height="100" Background="White">
                <Canvas.Resources>
                    <Style TargetType="Rectangle">
                        <Setter Property="Width" Value="25"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Fill" Value="Yellow"/>
                        <Setter Property="Stroke" Value="Black"/>
                    </Style>
                </Canvas.Resources>
            </Canvas>

            <TextBlock Text="Вид слева" Margin="5"/>
            <Canvas x:Name="FrontViewCanvas" Width="100" Height="100" Background="White">
                <Canvas.Resources>
                    <Style TargetType="Rectangle">
                        <Setter Property="Width" Value="25"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Fill" Value="Yellow"/>
                        <Setter Property="Stroke" Value="Black"/>
                    </Style>
                </Canvas.Resources>
            </Canvas>

            <TextBlock Text="Вид спереди" Margin="5"/>
            <Canvas x:Name="LeftViewCanvas" Width="100" Height="100" Background="White">
                <Canvas.Resources>
                    <Style TargetType="Rectangle">
                        <Setter Property="Width" Value="25"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Fill" Value="Yellow"/>
                        <Setter Property="Stroke" Value="Black"/>
                    </Style>
                </Canvas.Resources>
            </Canvas>

            <Button Content="Проверить" Click="CheckSolution_Click" Margin="5"/>
            <Button Content="Новая задача" Click="GenerateNewPuzzle" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>